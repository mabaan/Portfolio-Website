---
import '../styles/global.css';
import Navbar from '../components/Navbar';
import ThemeToggle from '../components/ThemeToggle';
import Footer from '../components/Footer';
const YEAR = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Mohammed Abaan | Portfolio</title>
    <meta name="description" content="Portfolio of Mohammed Abaan, Computer Science student and full-stack developer in Dubai. Projects, experience, resume, and contact." />

    <script>
      (function() {
        try {
          const t = localStorage.getItem('theme') || 'system';
          if (t === 'system') {
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
            document.documentElement.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
          } else {
            document.documentElement.setAttribute('data-theme', t);
          }
        } catch (e) {}
      })();
    </script>
  </head>

  <body class="bg-bg text-text-primary min-h-screen antialiased">
    <a class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:px-4 focus:py-2 focus:bg-surface focus:shadow rounded" href="#page-content">Skip to content</a>
    <Navbar client:load />
    <div style="display:none" id="theme-toggle-hydrate">
      <ThemeToggle client:load />
    </div>
    <script>
      requestAnimationFrame(() => {
        const hydrateWrapper = document.getElementById('theme-toggle-hydrate');
        const slot = document.getElementById('theme-toggle-slot');
        if (hydrateWrapper && slot) {
          while (hydrateWrapper.firstChild) {
            slot.appendChild(hydrateWrapper.firstChild);
          }
          hydrateWrapper.remove();
        }
      });
    </script>
    <main id="page-content" class="max-w-6xl mx-auto px-6 py-12">
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>