---
import '../styles/global.css';
import Navbar from '../components/Navbar';
import ThemeToggle from '../components/ThemeToggle';
const YEAR = new Date().getFullYear();
const resumeHref = '/assets/Mohammed%20Abaan%20Resume.pdf';
const github = 'https://github.com/mabaan';
const email = 'abaan7500@gmail.com';
const phone = '+971 50 7159 765';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Mohammed Abaan</title>

    <script>
      (function() {
        try {
          const t = localStorage.getItem('theme') || 'system';
          if (t === 'system') {
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
            document.documentElement.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
          } else {
            document.documentElement.setAttribute('data-theme', t);
          }
        } catch (e) {}
      })();
    </script>
  </head>

  <body class="bg-bg text-text-primary min-h-screen antialiased">
    <a class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:px-4 focus:py-2 focus:bg-surface focus:shadow rounded" href="#page-content">Skip to content</a>

    <!-- Navbar is a React component - hydrate on client -->
    <Navbar client:load />

    <!-- ThemeToggle is a small React component; we mount it immediately so it hydrates
         We also inject it into the navbar's theme-toggle slot after hydration so the markup stays accessible.
    -->
    <div style="display:none" id="theme-toggle-hydrate">
      <ThemeToggle client:load />
    </div>

    <script>
      // After ThemeToggle hydrates, move its element into the navbar slot
      (function () {
        // wait for DOM + microtask
        requestAnimationFrame(() => {
          const hydrateWrapper = document.getElementById('theme-toggle-hydrate');
          const slot = document.getElementById('theme-toggle-slot');
          if (hydrateWrapper && slot) {
            // move first child (the React component) into the navbar
            while (hydrateWrapper.firstChild) {
              slot.appendChild(hydrateWrapper.firstChild);
            }
            hydrateWrapper.remove();
          }
        });
      })();
    </script>

    <main id="page-content" class="max-w-6xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="mt-16 border-t border-muted">
      <div class="max-w-6xl mx-auto px-6 py-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
        <div>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-accent flex items-center justify-center text-white font-semibold">MA</div>
            <div>
              <div class="font-semibold">Mohammed Abaan</div>
              <div class="text-sm text-text-secondary">{email}, {phone}</div>
            </div>
          </div>
          <p class="mt-4 text-sm text-text-secondary max-w-md">I build fast, accessible web experiences and data solutions. Based in UAE, open to opportunities and collaborations.</p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 sm:items-center">
          <a href={github} class="text-text-secondary hover:text-text-primary">GitHub</a>
          <a href={resumeHref} class="btn inline-block">Download resume</a>
        </div>
      </div>

      <div class="text-center text-sm text-text-secondary py-6">
        © {YEAR} Mohammed Abaan • Built with Astro + Tailwind
      </div>
    </footer>
  </body>
</html>
