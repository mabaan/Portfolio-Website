---
import MainLayout from '../layouts/MainLayout.astro';
import TechStack from '../components/TechStack';
import FeaturedProjects from '../components/FeaturedProjects';

const socials = [
  {
    label: "GitHub",
    href: "https://github.com/mabaan",
    img: "https://techstack-generator.vercel.app/github-icon.svg",
    alt: "GitHub Profile",
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/mohammed-abaan-0245ba289/",
    img: "https://user-images.githubusercontent.com/74038190/235294012-0a55e343-37ad-4b0f-924f-c8431d9d2483.gif",
    alt: "LinkedIn Profile",
  },
  {
    label: "Discord",
    href: "https://discord.gg/8PrbRyhYqF",
    img: "https://user-images.githubusercontent.com/74038190/235294015-47144047-25ab-417c-af1b-6746820a20ff.gif",
    alt: "Join me on Discord",
  },
];

const resumeHref = "/assets/Mohammed%20Abaan%20Resume.pdf";
const quote = "“Strive not to be a success, but rather to be of value.” – Albert Einstein";
---
<MainLayout>
  <div class="pt-16 md:pt-24"></div>
  <section class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center py-12">
    <div class="flex flex-col justify-center h-full" style="min-height: 430px;">
      <h1 class="mt-6 md:mt-0 text-4xl md:text-5xl font-extrabold leading-tight text-text-primary mb-2">
        Hi, I am <span class="text-accent">Mohammed Abaan</span>.
      </h1>
      <p class="mt-2 text-lg text-text-secondary max-w-xl">
        Computer Science Student & Full-Stack Developer in Dubai.<br />
        4th year at AUS, passionate about web development, machine learning, and creative digital solutions.<br />
        I build fast, accessible web apps and data platforms with Astro, React, Python, and modern web tooling.
      </p>

      <div class="mt-8 flex flex-col items-start gap-4">
        <a href={resumeHref} class="btn px-6 py-3 rounded-lg font-bold text-base bg-accent text-white shadow hover:bg-accent-dark transition">
          Download Resume
        </a>
        <div id="socials" class="flex gap-8 mt-4">
          {socials.map(s => (
            <a class="social-icon" href={s.href} target="_blank" rel="noopener noreferrer">
              <img src={s.img} alt={s.alt} class="w-20 h-20 md:w-24 md:h-24 rounded hover:scale-110 transition" />
            </a>
          ))}
        </div>
      </div>
    </div>
    <div class="flex flex-col items-center justify-center h-full">
      <img src="public/GitHub Wallpaper.jpg" alt="Mohammed Abaan" class="rounded-2xl w-[30rem] h-[20rem] object-cover shadow-lg mb-6" />
      <div class="bg-surface border border-muted rounded-2xl p-4 text-center shadow">
        <span class="text-text-secondary">{quote}</span>
      </div>
    </div>
  </section>

  <TechStack client:load />
  <FeaturedProjects client:load />

  <!-- About Me / Personal Touch -->
  <section class="mt-16">
    <div class="bg-surface border border-muted rounded-2xl p-8 text-center shadow">
      <h3 class="text-xl font-semibold mb-2">A Little About Me</h3>
      <p class="text-text-secondary max-w-2xl mx-auto">
        Outside of code, I love anime, hiking, and exploring new tech. I'm always learning — from machine learning and data science to cloud deployments and UI design.<br/>
        My goal: Build tools people love and make a positive impact in tech.
      </p>
    </div>
  </section>

  <!-- CONTACT CTA -->
  <section class="mt-14">
    <div class="bg-surface border border-muted rounded-2xl p-8 text-center">
      <h3 class="text-xl font-semibold">Let us work together</h3>
      <p class="text-text-secondary mt-2">If you’d like to collaborate or have a role to discuss, let’s connect!</p>
      <div class="mt-4">
        <a href="/contact" class="btn inline-block">Get in touch</a>
      </div>
    </div>
  </section>
</MainLayout>