---
import MainLayout from '../layouts/MainLayout.astro';

const socials = [
  { label: "GitHub", href: "https://github.com/mabaan", icon: "github" },
  { label: "LinkedIn", href: "https://linkedin.com/in/mohammed-abaan-0245ba289", icon: "linkedin" },
  { label: "Discord", href: "https://discord.gg/your-discord-id", icon: "discord" }
];

const techStack = [
  { name: "Astro", icon: "/icons/astro.svg" },
  { name: "React", icon: "/icons/react.svg" },
  { name: "Python", icon: "/icons/python.svg" },
  { name: "C++", icon: "/icons/cpp.svg" },
  { name: "SQL", icon: "/icons/sql.svg" },
  { name: "Tailwind", icon: "/icons/tailwind.svg" }
];

const featuredProjects = [
  {
    title: "Company Website (GC International)",
    desc: "Public company site with Three.js homepage, Astro + React, Airtable CMS integration.",
    href: "https://github.com/mabaan/Company-Website",
    img: "/images/company-website.png",
    tech: ["Astro", "React", "Three.js", "Airtable"]
  },
  {
    title: "SmartMealz",
    desc: "Full-stack meal-planning platform with BMI and calorie tracking.",
    href: "https://github.com/mabaan/Smart-Mealz",
    img: "/images/smartmealz.png",
    tech: ["React", "Node.js", "MySQL"]
  },
  {
    title: "Malware Classification (CNN)",
    desc: "PyTorch CNN for malware classification; image-based representation of binaries.",
    href: "https://github.com/mabaan/Malware-Classification-using-CNNs",
    img: "/images/malware-cnn.png",
    tech: ["Python", "PyTorch", "CNN"]
  }
];

const resumeHref = "/assets/Mohammed%20Abaan%20Resume.pdf";
const quote = "“Strive not to be a success, but rather to be of value.” – Albert Einstein";
---
<MainLayout>
  <section class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center py-12">
    <div>
      <h1 class="text-4xl md:text-5xl font-extrabold leading-tight text-text-primary">
        Hi, I am <span class="text-accent">Mohammed Abaan</span>.
      </h1>
      <p class="mt-4 text-lg text-text-secondary max-w-xl">
        Computer Science Student & Full-Stack Developer in Dubai. <br />
        4th year at AUS, passionate about web development, machine learning, and creative digital solutions.<br />
        I build fast, accessible web apps and data platforms with Astro, React, Python, and modern web tooling.
      </p>

      <div class="mt-8 flex flex-wrap gap-4">
        <a href={resumeHref} class="btn">Download Resume</a>
        <a href="https://github.com/mabaan" target="_blank" rel="noopener noreferrer" class="btn bg-surface text-text-primary border border-muted">
          GitHub
        </a>
        <a href="https://linkedin.com/in/mohammed-abaan-0245ba289" target="_blank" rel="noopener noreferrer" class="btn bg-surface text-text-primary border border-muted">
          LinkedIn
        </a>
        <a href="/contact" class="btn bg-accent text-white">Contact</a>
      </div>

      <div class="mt-6 flex items-center gap-4">
        {socials.map(s => (
          <a href={s.href} target="_blank" rel="noopener noreferrer" aria-label={s.label} class="hover:scale-110 transition">
            <img src={`/icons/${s.icon}.svg`} alt={s.label} class="w-6 h-6" />
          </a>
        ))}
      </div>

      <div class="mt-8">
        <span class="text-xs text-muted">Based in UAE, open to freelance and full-time roles</span>
      </div>
    </div>
    <div class="flex flex-col items-center">
      <img src="/images/profile-animated.gif" alt="Mohammed Abaan" class="rounded-2xl w-48 h-48 object-cover shadow-lg mb-6" />
      <div class="bg-surface border border-muted rounded-2xl p-4 text-center shadow">
        <span class="text-text-secondary">{quote}</span>
      </div>
    </div>
  </section>

  <!-- Tech Stack Preview -->
  <section class="mt-12">
    <h2 class="text-xl font-bold text-text-primary mb-4">Tech Stack</h2>
    <div class="flex flex-wrap gap-6">
      {techStack.map(t => (
        <div class="flex flex-col items-center justify-center gap-2 bg-surface border border-muted rounded-xl px-4 py-2 shadow-sm">
          <img src={t.icon} alt={t.name} class="w-8 h-8" />
          <span class="text-xs text-text-secondary">{t.name}</span>
        </div>
      ))}
    </div>
  </section>

  <!-- Featured Projects -->
  <section id="projects" class="mt-16">
    <h2 class="text-2xl font-semibold text-text-primary mb-6">Featured Projects</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {featuredProjects.map(p => (
        <article class="bg-surface border border-muted rounded-2xl p-6 shadow-sm hover:shadow-lg transition">
          <img src={p.img} alt={p.title} class="rounded-xl w-full h-40 object-cover mb-4" />
          <h3 class="text-lg font-semibold text-text-primary">
            <a class="hover:underline" href={p.href} target="_blank" rel="noopener noreferrer">{p.title}</a>
          </h3>
          <p class="text-text-secondary mt-2">{p.desc}</p>
          <div class="mt-3 flex flex-wrap gap-2">
            {p.tech.map(tech => (
              <span class="bg-muted text-xs px-2 py-1 rounded">{tech}</span>
            ))}
          </div>
          <div class="mt-4 flex items-center gap-3">
            <a href={p.href} class="text-sm text-accent hover:underline" target="_blank" rel="noopener noreferrer">View Repo</a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- About Me / Personal Touch -->
  <section class="mt-16">
    <div class="bg-surface border border-muted rounded-2xl p-8 text-center shadow">
      <h3 class="text-xl font-semibold mb-2">A Little About Me</h3>
      <p class="text-text-secondary max-w-2xl mx-auto">
        Outside of code, I love anime, hiking, and exploring new tech. I'm always learning — from machine learning and data science to cloud deployments and UI design.<br/>
        My goal: Build tools people love and make a positive impact in tech.
      </p>
    </div>
  </section>

  <!-- CONTACT CTA -->
  <section class="mt-14">
    <div class="bg-surface border border-muted rounded-2xl p-8 text-center">
      <h3 class="text-xl font-semibold">Let us work together</h3>
      <p class="text-text-secondary mt-2">If you’d like to collaborate or have a role to discuss, let’s connect!</p>
      <div class="mt-4">
        <a href="/contact" class="btn inline-block">Get in touch</a>
      </div>
    </div>
  </section>
</MainLayout>